<resources>
    <style name="Widget.Theme.BlackBox.MyView" parent="">
        <item name="android:background">#FF000000</item>
    </style>
    <style name="BoardTile1" parent="@android:style/Widget.TextView">
        <item name="android:background">#FF000000</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="BoardTile2" parent="@android:style/Widget.TextView">
        <item name="android:background">#FF222222</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="LaserButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/laser_button_bg</item>
        <item name="strokeColor">@color/laser_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="LaserButtonHorizontal" parent="LaserButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
    <style name="LaserButtonVertical" parent="LaserButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
    </style>
    <style name="ScoreBar" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:background">#FF000000</item>
        <item name="android:textColor">#FFBBBBBB</item>
    </style>
</resources>